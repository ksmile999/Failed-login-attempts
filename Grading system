# I am going to try a grading sytem 
# A = 80-100 Excellent Pass
# B = 70-79 Very Good Pass
# C = 60-69 Good Pass
# D = 50-59 Pass
# F = 0-49 Fail

def grading_system(total_score):
     
    if not 0 <= total_score <= 100:
        return "Invalid input: Score must be between 0 and 100."
    if total_score >= 80:
        return 'Excellent!, you had Grade A, passed'
    elif total_score >= 70:
        return 'Very Good! you had B, passed'
    elif total_score >= 60:
        return 'Good! you had C, Passed'
    elif total_score >= 50:
        return 'you had D, passed'
    else:
        return 'Failed, try again next resist'

#test score 
print (grading_system(-1))
print (grading_system(75))
print (grading_system(65))
print (grading_system(55))
print (grading_system(45))
print (grading_system(0))
        